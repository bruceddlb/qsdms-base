@{
    ViewBag.Title = "会员列表";
    Layout = "~/Views/Shared/_LayoutList.cshtml";
}
<script>
    $(function () {
        InitialPage();
        GetGrid();
    });
    //初始化页面
    function InitialPage() {
        //resize重设(表格、树形)宽高
        $(window).resize(function (e) {
            window.setTimeout(function () {
                $('#gridTable').setGridWidth(($('.gridPanel').width()));
                $("#gridTable").setGridHeight($(window).height() - 160);
            }, 200);
            e.stopPropagation();
        });
    }
    //加载表格
    function GetGrid() {
        var selectedRowIndex = 0;
        var $gridTable = $("#gridTable");
        var queryJson = {};
        $gridTable.jqGrid({
            url: "/TradeManage/ShopShipTemplates/GetPageListJson",
            datatype: "json",
            postData: { queryJson: JSON.stringify(queryJson) },
            height: $(window).height() - 160,
            autowidth: true,
            colModel: [
                { label: "主键", name: "ShopShipTemplatesId", hidden: true },
                { label: "标题", name: "Title", index: "Title", width: 300, align: "center" },
                {
                    label: "免费", name: "Free", index: "Free", width: 100, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == '@((int)Trade.Model.Enums.YesOrNo.是)') {
                            return "<span class=\"label label-success\">@Trade.Model.Enums.YesOrNo.是</span>";
                        } else if (cellvalue == '@((int)Trade.Model.Enums.YesOrNo.否)') {
                            return "<span class=\"label label-success\">@Trade.Model.Enums.YesOrNo.否</span>";
                        }
                    }
                },
                {
                    label: "类型", name: "Type", index: "Type", width: 100, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        if (cellvalue == '@((int)Trade.Model.Enums.BillingType.按件数)') {
                            return "<span class=\"label label-success\">@Trade.Model.Enums.BillingType.按件数</span>";
                        } else if (cellvalue == '@((int)Trade.Model.Enums.BillingType.按重量)') {
                            return "<span class=\"label label-success\">@Trade.Model.Enums.BillingType.按重量</span>";
                        }
                    }
                }, {
                    label: "操作", name: "_", index: "_", width: 60, align: "center",
                    formatter: function (cellvalue, options, rowObject) {
                        return '<a id="btn-add" class="btn btn-default" onclick="btn_shipfees(\'' + rowObject["ShopShipTemplatesId"] + '\')"><i class="fa fa-plus"></i>配送运费</a>'

                    }
                }

            ],
            viewrecords: true,
            rowNum: 30,
            rowList: [30, 50, 100, 500, 1000],
            pager: "#gridPager",
            sortname: '',
            sortorder: 'desc',
            rownumbers: true,
            shrinkToFit: false,
            gridview: true

        });
        //查询事件
        $("#btn_Search").click(function () {
            var queryJson = {};
            queryJson["keyword"] = $("#txt_Keyword").val();
            $gridTable.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }
            }).trigger('reloadGrid');
        });
        //查询回车
        $('#txt_Keyword').bind('keypress', function (event) {
            if (event.keyCode == "13") {
                $('#btn_Search').trigger("click");
            }
        });
    }

    function btn_add() {
        dialogOpen({
            id: "Form",
            title: '创建',
            url: '/TradeManage/ShopShipTemplates/Form',
            width: "600px",
            height: "400px",
            callBack: function (iframeId) {
                top.frames[iframeId].AcceptClick();
            }
        });
    }

    //修改
    function btn_edit() {
        var keyValue = $("#gridTable").jqGridRowValue("ShopShipTemplatesId");
        if (checkedRow(keyValue)) {
            dialogOpen({
                id: "Form",
                title: '编辑',
                url: '/TradeManage/ShopShipTemplates/Form?keyValue=' + keyValue,
                width: "600px",
                height: "400px",
                callBack: function (iframeId) {
                    top.frames[iframeId].AcceptClick();
                }
            });
        }
    }
    //删除
    function btn_delete() {
        var keyValue = $("#gridTable").jqGridRowValue("ShopShipTemplatesId");
        if (keyValue) {
            $.RemoveForm({
                url: "/TradeManage/ShopShipTemplates/RemoveForm",
                param: { keyValue: keyValue },
                success: function (data) {
                    $("#gridTable").trigger("reloadGrid");
                }
            })
        } else {
            dialogMsg('请选择需要删除的数据！', 0);
        }
    }

    //地址管理
    function btn_shipfees(tempid) {
        if (checkedRow(tempid)) {
            dialogOpen({
                id: "ShipFees_",
                title: '配送运费',
                url: '/TradeManage/ShipFees/List?tempid=' + tempid,
                width: "1000px",
                height: "700px",
                btn: null
            });
        }
    }
</script>
<div class="toolbarPanel">
    <div class="row">
        <div class="col-md-2">
            <input id="txt_Keyword" type="text" class="form-control" placeholder="请输入要查询关键字" style="" />
        </div>
        <div class="col-md-1">
            <a id="btn_Search" class="btn btn-primary"><i class="fa fa-search"></i>&nbsp;查询</a>
        </div>



        <div class="toolbar">
            <div class="btn-group animated fadeInDownBig">
                <a id="btn-replace" class="btn btn-default" onclick="reload();"><i class="fa fa-refresh"></i>&nbsp;刷新</a>
                <a id="btn-add" class="btn btn-default" onclick="btn_add()"><i class="fa fa-plus"></i>&nbsp;新建</a>
                <a id="btn-edit" class="btn btn-default" onclick="btn_edit()"><i class="fa fa-pencil-square-o"></i>&nbsp;编辑</a>
                <a id="btn-delete" class="btn btn-default" onclick="btn_delete()"><i class="fa fa-trash-o"></i>&nbsp;删除</a>


            </div>
        </div>
    </div>

</div><div class="gridPanel">
    <table id="gridTable"></table>
    <div id="gridPager" style="padding: 10px; height: 40px; background: #F3F3F4;"></div>
</div>